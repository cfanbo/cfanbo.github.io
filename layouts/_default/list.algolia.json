[
    {{- range $index, $entry := .Site.RegularPages }}
    {{- if $index }}, {{ end }}
    {
      "objectID": "{{ .File.TranslationBaseName }}",
      "url": {{ .Permalink | jsonify }},
      "title": {{ .Title | jsonify }},
      "summary": {{ .Plain | safeHTML | truncate 300 | jsonify }},
      "content": {{ .Plain | safeHTML | truncate 3200 | jsonify }},
      "pubDate": {{ .PublishDate | jsonify }}
    }
    {{- end }}
  ]